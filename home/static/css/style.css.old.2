body {
    font: 16px/1.75 'Open Sans', sans-serif;
    color: #241d00;
    background-color: #fffefa;
    -moz-hyphens: auto;
    -o-hyphens: auto;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
    hyphens: auto;
}
h3, h4, h5 {
  font-family: 'Gentium Book Basic', serif;
  color: #8a6e00;
}
h3 {
    margin: 10px 0 30px 0;
    letter-spacing: 3px;
    font-size: 30px;
}
h4 {
    margin: 10px 0 15px 0;
    letter-spacing: 1px;
    font-size: 25px
}
h5 {
    padding-top: 20px;
    font-size: 20px;
    letter-spacing: 1px;
}
em {
    font-family: 'Gentium Book Basic', serif;
    font-style: normal;
    font-size: 19px;
    letter-spacing: 1px;
}
#kuenstlerliste {
    padding-top: 20px;
}
.red {
    color: #997500;
}
.instrument !important {
    padding: 5px 0 0 0;
    margin: 0;
}
/*@media (max-width: 600px) {
  .container {
    padding: 80px 5%;
  }
}*/
.container {
  padding: 80px 10%;
}
.person {
    border: 10px solid transparent;
    margin-bottom: 25px;
    width: 80%;
    height: 80%;
    opacity: 0.7;
}
.person:hover {
    border-color: #f1f1f1;
}
.carousel-inner img {
    width: 100%; /* Set width to 100% */
    margin: auto;
}
.carousel-inner h3 {
    color: #fffefa;
}
.tion h3 {
    color: #fff !important;
}
.carousel-caption {
  background-color: rgba(0, 0, 0, 0.2)
}
@media (max-width: 600px) {
  .carousel-caption {
    display: none; /* Hide the carousel text when the screen is less than 600 pixels wide */
  }
}

@media (max-width: 1000px) {
  .carousel-inner {
    padding-top: 50px;
  }
}

.bg-1 {
    background: #cca300;
    color: #fffefa;
}
.bg-1 h3 {
    color: #fffefa;
}
.bg-1 h4 {
    background: #cca300;
    color: #fffefa;
}
.list-group-item h4 {
  background: #fffefa;
  color: #806200;
}
/*.bg-1 p {font-style: italic;}*/
.list-group-item {
    border-top-right-radius: 0;
    border-top-left-radius: 0;
    background: #fffefa;
    color: #3c2e00;
}
/*.list-group-item:last-child {
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
}*/
.thumbnail {
    background-color: #cca300;
    padding: 0 0 15px 0;
    border: none;
    border-radius: 0;
}
.thumbnail p {
    margin-top: 15px;
    color: #fffefa;
}
.thumbnail h5 {
    color: #fffefa;
}
.sponsor {
  min-height: 230px;
  padding: 30px;
  background: #fffefa;
  color: #241d00;
  -moz-hyphens: none;
  -o-hyphens: none;
  -webkit-hyphens: none;
  -ms-hyphens: none;
  hyphens: none;
}

.btn {
    padding: 10px 20px;
    background-color: #997a00;
    color: #f1f1f1;
    border-radius: 0;
    transition: .2s;
}
.btn:hover, .btn:focus {
    border: 1px solid #333;
    background-color: #fff;
    color: #000;
}
.modal-header, .close {
    background-color: #cca300;
    color: #fffefa !important;
    text-align: center;
    font-size: 30px;
    -moz-hyphens: none;
    -o-hyphens: none;
    -webkit-hyphens: none;
    -ms-hyphens: none;
    hyphens: none;
}
.modal-header, .modal-body {
    padding: 30px 30px;
}
.modal-header h4 {
    color: #fffefa;
}
.modal-body {
  color: #241d00;
}
.nav-tabs li a {
    color: #777;
}
#googleMap {
    width: 100%;
    height: 400px;
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
}
.navbar {
    font-family: 'Open Sans', sans-serif;
    margin-bottom: 0;
    background-color: #cca300;
    border: 0;
    font-size: 13px !important;
    letter-spacing: 2px;
    /* opacity: 0.9; */
}
.navbar li a, .navbar .navbar-brand {
    color: #fffefa !important;
}
.navbar-brand {
  font-family: 'Gentium Book Basic', serif !important;
}
.navbar-nav li a:hover {
    color: #fffefa !important;
}
.navbar-nav li.active a {
    color: #fffefa !important;
    background-color: #b38f00 !important;
}
.navbar-default .navbar-toggle {
    border-color: transparent;
}
.open .dropdown-toggle {
    color: #fffefa;
    background-color: #555 !important;
}
.dropdown-menu li a {
    color: #000 !important;
}
.dropdown-menu li a:hover {
    background-color: #cca300 !important;
}
footer {
    background-color: #1a1400;
    color: #f5f5f5;
    padding: 32px;
}
footer a {
    color: #f5f5f5;
}
footer a:hover {
    color: #777;
    text-decoration: none;
}
.form-control {
    border-radius: 0;
}
textarea {
    resize: none;
}
/* Weiterlesen */
#morecontent {
    display: none;
}
